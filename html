<!-- üê† SCRIPT DO AQU√ÅRIO - MOVIMENTO CONT√çNUO SEM PARAR -->
<script>
document.addEventListener("DOMContentLoaded", () => {

  // Fechar splash
  document.getElementById('splash').addEventListener('click', function() {
    this.style.display = 'none';
  });

  const aquario = document.getElementById("aquario");
  const fishes = aquario.querySelectorAll(".fish");

  // Inicializa√ß√£o
  fishes.forEach((fish, index) => {
    fish.dataset.direction = index < 4 ? "right" : "left";
    fish.dataset.speed = "0.4";

    fish.style.left = index < 4 ? "20px" : "240px";
    fish.style.top = (Math.random() * 140 + 20) + "px";

    fish.style.transform =
      fish.dataset.direction === "right"
        ? "scaleX(1)"
        : "scaleX(-1)";
  });

  function moveFish() {
    fishes.forEach(fish => {
      let left = parseFloat(fish.style.left);
      const speed = parseFloat(fish.dataset.speed);

      if (fish.dataset.direction === "right") {
        left += speed;
      } else {
        left -= speed;
      }

      // bordas
      if (left <= 10) {
        left = 10;
        fish.dataset.direction = "right";
        fish.style.transform = "scaleX(1)";
      }

      if (left >= 250) {
        left = 250;
        fish.dataset.direction = "left";
        fish.style.transform = "scaleX(-1)";
      }

      fish.style.left = left + "px";
    });

    requestAnimationFrame(moveFish);
  }

  // inicia movimento autom√°tico IMEDIATO
  moveFish();

  // drag
  let draggedFish = null;
  let offsetX = 0;
  let offsetY = 0;

  fishes.forEach(fish => {
    fish.addEventListener("mousedown", e => {
      draggedFish = fish;
      offsetX = e.clientX - fish.getBoundingClientRect().left;
      offsetY = e.clientY - fish.getBoundingClientRect().top;
      fish.style.zIndex = 10;
      e.preventDefault();
    });
  });

  document.addEventListener("mousemove", e => {
    if (!draggedFish) return;

    const rect = aquario.getBoundingClientRect();
    let x = e.clientX - rect.left - offsetX;
    let y = e.clientY - rect.top - offsetY;

    x = Math.max(0, Math.min(260, x));
    y = Math.max(0, Math.min(170, y));

    draggedFish.style.left = x + "px";
    draggedFish.style.top = y + "px";
  });

  document.addEventListener("mouseup", () => {
    if (draggedFish) {
      draggedFish.style.zIndex = 2;
      draggedFish = null;
    }
  });

});
</script>
